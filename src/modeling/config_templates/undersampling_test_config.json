{
  "run_name": "undersampling_test",
  "random_state": 42,
  "data_path": "data/final",
  "output_base_dir": "outputs/master_runs",
  
  "data_types": {
    "normal": {
      "enabled": true,
      "description": "원본 불균형 데이터"
    },
    "smote": {
      "enabled": false,
      "description": "SMOTE 오버샘플링 적용",
      "sampling_strategy": 0.3,
      "k_neighbors": 5,
      "m_neighbors": 10
    },
    "undersampling": {
      "enabled": true,
      "description": "언더샘플링 적용",
      "method": "random",
      "sampling_strategy": "auto",
      "random_state": 42
    },
    "combined": {
      "enabled": false,
      "description": "SMOTE + 언더샘플링 조합",
      "smote_ratio": 0.3,
      "undersampling_ratio": 0.7
    }
  },
  
  "threshold_optimization": {
    "enabled": true,
    "metric_priority": "f1",
    "alternatives": ["precision", "recall", "balanced_accuracy"],
    "precision_recall_curve": true,
    "roc_curve": true
  },
  
  "lasso": {
    "enabled": true,
    "alphas": [0.001, 0.01, 0.1, 1.0],
    "cv_folds": 5,
    "threshold": "median"
  },
  
  "models": {
    "logistic": {
      "enabled": true,
      "n_trials": 20,
      "penalty": ["l2"],
      "C_range": [1e-3, 100],
      "max_iter_range": [100, 1000],
      "l2_solvers": ["liblinear", "newton-cg"],
      "l1_ratio_range": [0.1, 0.9]
    },
    
    "random_forest": {
      "enabled": true,
      "n_trials": 20,
      "n_estimators_range": [100, 300],
      "max_depth_range": [3, 10],
      "min_samples_split_range": [5, 15],
      "min_samples_leaf_range": [2, 8],
      "max_features_range": [0.3, 1.0]
    },
    
    "xgboost": {
      "enabled": false,
      "n_trials": 20,
      "n_estimators_range": [100, 300],
      "max_depth_range": [3, 8],
      "learning_rate_range": [0.01, 0.2],
      "subsample_range": [0.8, 1.0],
      "colsample_bytree_range": [0.8, 1.0],
      "reg_alpha_range": [0, 5],
      "reg_lambda_range": [0, 5]
    }
  },
  
  "ensemble": {
    "enabled": true,
    "method": "weighted_average",
    "auto_weight": true,
    "models": ["logistic", "random_forest"],
    "data_types": ["normal", "undersampling"],
    "weights": {
      "logisticregression_normal": 0.3,
      "randomforest_normal": 0.3,
      "logisticregression_undersampling": 0.2,
      "randomforest_undersampling": 0.2
    },
    "threshold_optimization": {
      "enabled": true,
      "metric_priority": "f1"
    }
  }
} 