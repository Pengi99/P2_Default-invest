{
  "run_name": "default_run",
  "random_state": 42,
  "data_path": "data/final",
  "output_base_dir": "outputs/master_runs",
  
  "data_types": {
    "normal": {
      "enabled": true,
      "description": "원본 불균형 데이터"
    },
    "smote": {
      "enabled": false,
      "description": "SMOTE 오버샘플링 적용",
      "sampling_strategy": 0.1,
      "k_neighbors": 5,
      "m_neighbors": 10
    },
    "undersampling": {
      "enabled": false,
      "description": "언더샘플링 적용",
      "method": "random",
      "sampling_strategy": "auto",
      "random_state": 42
    },
    "combined": {
      "enabled": true,
      "description": "SMOTE + 언더샘플링 조합",
      "smote_ratio": 0.1,
      "undersampling_ratio": 0.3
    }
  },
  
  "threshold_optimization": {
    "enabled": true,
    "metric_priority": "f1",
    "alternatives": ["precision", "recall", "balanced_accuracy"],
    "precision_recall_curve": true,
    "roc_curve": true
  },
  
  "lasso": {
    "enabled": true,
    "alphas": [0.0001, 0.0005, 0.001, 0.005, 0.01, 0.05, 0.1, 0.5, 1.0],
    "cv_folds": 5,
    "threshold": 0.0000001
  },
  
  "models": {
    "logistic": {
      "enabled": true,
      "n_trials": 100,
      "penalty": ["l2", "elasticnet"],
      "C_range": [1e-3, 100],
      "max_iter_range": [100, 1000],
      "l2_solvers": ["lbfgs", "liblinear", "newton-cg", "sag", "saga"],
      "l1_ratio_range": [0.1, 0.9]
    },
    
    "random_forest": {
      "enabled": true,
      "n_trials": 100,
      "n_estimators_range": [100, 500],
      "max_depth_range": [3, 20],
      "min_samples_split_range": [5, 20],
      "min_samples_leaf_range": [2, 10],
      "max_features_range": [0.1, 1.0]
    },
    
    "xgboost": {
      "enabled": true,
      "n_trials": 100,
      "n_estimators_range": [100, 500],
      "max_depth_range": [3, 12],
      "learning_rate_range": [0.01, 0.3],
      "subsample_range": [0.6, 1.0],
      "colsample_bytree_range": [0.6, 1.0],
      "reg_alpha_range": [0, 10],
      "reg_lambda_range": [0, 10]
    }
  },
  
  "ensemble": {
    "enabled": true,
    "method": "weighted_average",
    "auto_weight": true,
    "models": ["logistic", "random_forest", "xgboost"],
    "data_types": ["normal", "smote", "undersampling"],
    "weights": {
      "logisticregression_normal": 0.25,
      "randomforest_normal": 0.25,
      "xgboost_normal": 0.25,
      "logisticregression_smote": 0.15,
      "randomforest_smote": 0.15,
      "xgboost_smote": 0.15,
      "logisticregression_undersampling": 0.2,
      "randomforest_undersampling": 0.2,
      "xgboost_undersampling": 0.2
    },
    "threshold_optimization": {
      "enabled": true,
      "metric_priority": "f1"
    }
  }
} 