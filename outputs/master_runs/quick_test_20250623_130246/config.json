{
  "run_name": "quick_test",
  "random_state": 42,
  "data_path": "data/final",
  "output_base_dir": "outputs/master_runs",
  "threshold_optimization": {
    "enabled": true,
    "metric_priority": "f1",
    "alternatives": [
      "precision",
      "recall"
    ],
    "precision_recall_curve": true,
    "roc_curve": true
  },
  "lasso": {
    "enabled": false,
    "alphas": [
      0.001,
      0.01,
      0.1
    ],
    "cv_folds": 3,
    "threshold": "median"
  },
  "models": {
    "logistic": {
      "enabled": true,
      "n_trials": 10,
      "penalty": [
        "l2"
      ],
      "C_range": [
        0.01,
        10
      ],
      "max_iter_range": [
        100,
        1000
      ],
      "l2_solvers": [
        "lbfgs",
        "liblinear"
      ],
      "l1_ratio_range": [
        0.3,
        0.7
      ]
    },
    "random_forest": {
      "enabled": true,
      "n_trials": 10,
      "n_estimators_range": [
        100,
        300
      ],
      "max_depth_range": [
        5,
        15
      ],
      "min_samples_split_range": [
        5,
        15
      ],
      "min_samples_leaf_range": [
        2,
        8
      ],
      "max_features_range": [
        0.3,
        0.8
      ]
    },
    "xgboost": {
      "enabled": true,
      "n_trials": 10,
      "n_estimators_range": [
        100,
        300
      ],
      "max_depth_range": [
        3,
        8
      ],
      "learning_rate_range": [
        0.05,
        0.2
      ],
      "subsample_range": [
        0.7,
        1.0
      ],
      "colsample_bytree_range": [
        0.7,
        1.0
      ],
      "reg_alpha_range": [
        0,
        5
      ],
      "reg_lambda_range": [
        0,
        5
      ]
    }
  },
  "ensemble": {
    "enabled": true,
    "method": "weighted_average",
    "auto_weight": false,
    "models": [
      "logistic",
      "random_forest",
      "xgboost"
    ],
    "data_types": [
      "normal"
    ],
    "weights": {
      "logisticregression_normal": 0.3,
      "randomforest_normal": 0.4,
      "xgboost_normal": 0.3
    },
    "threshold_optimization": {
      "enabled": true,
      "metric_priority": "f1"
    }
  }
}