{
  "run_name": "default_run",
  "random_state": 42,
  "data_path": "data_new/final",
  "output_base_dir": "outputs/master_runs",
  "threshold_optimization": {
    "enabled": true,
    "metric_priority": "recall",
    "alternatives": [
      "precision",
      "f1",
      "balanced_accuracy"
    ],
    "precision_recall_curve": true,
    "roc_curve": true
  },
  "lasso": {
    "enabled": true,
    "alphas": [
      0.0001,
      0.0005,
      0.001,
      0.005,
      0.01,
      0.05,
      0.1,
      0.5,
      1.0
    ],
    "cv_folds": 5,
    "threshold": "median"
  },
  "models": {
    "logistic": {
      "enabled": true,
      "n_trials": 1000,
      "penalty": [
        "l1",
        "l2",
        "elasticnet"
      ],
      "C_range": [
        0.0001,
        100
      ],
      "max_iter_range": [
        100,
        2000
      ],
      "l2_solvers": [
        "lbfgs",
        "liblinear",
        "newton-cg",
        "sag",
        "saga"
      ],
      "l1_ratio_range": [
        0.1,
        0.9
      ]
    },
    "random_forest": {
      "enabled": true,
      "n_trials": 1000,
      "n_estimators_range": [
        100,
        500
      ],
      "max_depth_range": [
        3,
        20
      ],
      "min_samples_split_range": [
        5,
        20
      ],
      "min_samples_leaf_range": [
        2,
        10
      ],
      "max_features_range": [
        0.1,
        1.0
      ]
    },
    "xgboost": {
      "enabled": true,
      "n_trials": 1000,
      "n_estimators_range": [
        100,
        500
      ],
      "max_depth_range": [
        3,
        12
      ],
      "learning_rate_range": [
        0.01,
        0.3
      ],
      "subsample_range": [
        0.6,
        1.0
      ],
      "colsample_bytree_range": [
        0.6,
        1.0
      ],
      "reg_alpha_range": [
        0,
        10
      ],
      "reg_lambda_range": [
        0,
        10
      ]
    }
  }
}