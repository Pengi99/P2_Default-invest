{
  "run_name": "production_run",
  "random_state": 42,
  "data_path": "data_new/final",
  "output_base_dir": "outputs/master_runs",
  
  "threshold_optimization": {
    "enabled": true,
    "metric_priority": "f1",
    "alternatives": ["precision", "recall", "balanced_accuracy"]
  },
  
  "lasso": {
    "enabled": true,
    "alphas": [0.00001, 0.00005, 0.0001, 0.0005, 0.001, 0.005, 0.01, 0.05, 0.1, 0.5, 1.0, 5.0, 10.0],
    "cv_folds": 10,
    "threshold": "median"
  },
  
  "models": {
    "logistic": {
      "enabled": true,
      "n_trials": 100,
      "penalty": ["l1", "l2", "elasticnet"],
      "C_range": [1e-5, 1000],
      "max_iter_range": [100, 5000],
      "l2_solvers": ["lbfgs", "liblinear", "newton-cg", "sag", "saga"],
      "l1_ratio_range": [0.01, 0.99]
    },
    
    "random_forest": {
      "enabled": true,
      "n_trials": 100,
      "n_estimators_range": [50, 1000],
      "max_depth_range": [3, 30],
      "min_samples_split_range": [2, 30],
      "min_samples_leaf_range": [1, 15],
      "max_features_range": [0.05, 1.0]
    },
    
    "xgboost": {
      "enabled": true,
      "n_trials": 100,
      "n_estimators_range": [50, 1000],
      "max_depth_range": [3, 15],
      "learning_rate_range": [0.005, 0.5],
      "subsample_range": [0.5, 1.0],
      "colsample_bytree_range": [0.5, 1.0],
      "reg_alpha_range": [0, 20],
      "reg_lambda_range": [0, 20]
    }
  }
} 