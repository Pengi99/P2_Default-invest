{
  "run_name": "lasso_focus",
  "random_state": 42,
  "data_path": "data_new/final",
  "output_base_dir": "outputs/master_runs",
  
  "threshold_optimization": {
    "enabled": true,
    "metric_priority": "precision",
    "alternatives": ["f1", "recall", "balanced_accuracy"]
  },
  
  "lasso": {
    "enabled": true,
    "alphas": [0.00001, 0.00005, 0.0001, 0.0002, 0.0005, 0.001, 0.002, 0.005, 0.01, 0.02, 0.05, 0.1, 0.2, 0.5, 1.0],
    "cv_folds": 10,
    "threshold": 0.001
  },
  
  "models": {
    "logistic": {
      "enabled": true,
      "n_trials": 30,
      "penalty": ["l2"],
      "C_range": [0.001, 100],
      "max_iter_range": [500, 2000],
      "l2_solvers": ["lbfgs", "saga"],
      "l1_ratio_range": [0.1, 0.9]
    },
    
    "random_forest": {
      "enabled": true,
      "n_trials": 30,
      "n_estimators_range": [200, 500],
      "max_depth_range": [5, 20],
      "min_samples_split_range": [5, 20],
      "min_samples_leaf_range": [2, 10],
      "max_features_range": [0.2, 1.0]
    },
    
    "xgboost": {
      "enabled": true,
      "n_trials": 30,
      "n_estimators_range": [200, 500],
      "max_depth_range": [4, 12],
      "learning_rate_range": [0.01, 0.3],
      "subsample_range": [0.6, 1.0],
      "colsample_bytree_range": [0.6, 1.0],
      "reg_alpha_range": [0, 10],
      "reg_lambda_range": [0, 10]
    }
  }
} 